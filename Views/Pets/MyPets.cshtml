@model IEnumerable<Demo.Models.Pet>

@{
    ViewData["Title"] = "MyPets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MyPets</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
  
            <td>
                <form asp-action="Delete" method="POST">
                    <input type="hidden" asp-for="@item.Id" />
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <input type="submit" class="btn btn-danger delete" value="Delete"
                           data-id="@item.Id" data-controller="Pets" data-action="Delete"
                           data-body-message="Are you sure you went to delete this pet?" />
                </form>
            </td>
         
        </tr>
}
    </tbody>
</table>
